# Elasticsearch Configuration
ELASTICSEARCH_NODE=https://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_secure_password_here
# Or use API key instead of username/password
# ELASTICSEARCH_API_KEY=your_api_key_here

# SSL/TLS Configuration
# For production, set to 'production' to enforce certificate validation
NODE_ENV=development
# Optional: Path to CA certificate file
# ELASTICSEARCH_CA_CERT=/path/to/ca.crt

# Connection Settings
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_REQUEST_TIMEOUT=30000
ELASTICSEARCH_SNIFF_ON_START=false
ELASTICSEARCH_SNIFF_INTERVAL=60000
ELASTICSEARCH_SNIFF_ON_CONNECTION_FAULT=true
ELASTICSEARCH_COMPRESSION=false

# Connection Pool Settings
ELASTICSEARCH_POOL_MAX_RETRIES=3
ELASTICSEARCH_POOL_REQUEST_TIMEOUT=30000
ELASTICSEARCH_POOL_SNIFF_INTERVAL=60000

# Index Names
ELASTICSEARCH_MEDIA_INDEX=media

# Security Settings
ELASTICSEARCH_ENABLE_API_KEY_AUTH=true
ELASTICSEARCH_ENABLE_RATE_LIMITING=true
ELASTICSEARCH_RATE_LIMIT_WINDOW_MS=60000
ELASTICSEARCH_RATE_LIMIT_MAX=100